@model Mission06_Costley.Models.Movie

<form asp-action="AddMovie" method="post">
    <div>
        <label>Index:</label>
        <input type="number" asp-for="Id" disabled /> <!-- Disable input for index -->
    </div>

    <div>
        <label>Category:</label>
        <input asp-for="Category" />
    </div>

    <div>
        <label>Title:</label>
        <input asp-for="Title" />
    </div>

    <div>
        <label>Year:</label>
        <input type="number" asp-for="ReleaseYear" />
    </div>

    <div>
        <label>Director:</label>
        <input asp-for="Director" />
    </div>

    <div>
        <label>Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div>
        <label>Edited:</label>
        <input type="checkbox" asp-for="Edited" />
    </div>

    <div>
        <label>Lent To:</label>
        <input asp-for="LentTo" />
    </div>

    <div>
        <label>Notes:</label>
        <input asp-for="Notes" maxlength="25" />
    </div>

    <button type="submit">Add Movie</button>
</form>
